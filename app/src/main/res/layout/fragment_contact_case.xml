<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context=".chat.fragments.ContactCaseFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="139dp"
        android:text="Select a case that best match your question"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Enter your name:"
                android:textColor="@color/white">
            </TextView>
            <EditText
                android:id="@+id/localUsername"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/btnCase1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_selector"
            android:textColor="@color/black"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/avenir_next_bold"
            android:enabled="false"
            android:text="Case1" />

        <Button
            android:id="@+id/btnCase2"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_selector"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_next_bold"
            android:enabled="false"
            android:text="Case2" />

        <Button
            android:id="@+id/btnCase3"
            android:layout_width="match_parent"
            android:background="@drawable/button_background_selector"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenir_next_bold"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Case3" />

        <Button
            android:id="@+id/btnCase4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background_selector"
            android:fontFamily="@font/avenir_next_bold"
            android:enabled="false"
            android:text="Case4"

            android:textColor="@color/black" />


    </LinearLayout>
</RelativeLayout>